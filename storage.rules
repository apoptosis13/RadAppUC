rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is Admin by reading their Firestore profile
    // Supports both UID and Email as document IDs
    function isAdmin() {
      return isAuthenticated() && (
        (firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) && 
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin') ||
        (firestore.exists(/databases/(default)/documents/users/$(request.auth.token.email)) && 
         firestore.get(/databases/(default)/documents/users/$(request.auth.token.email)).data.role == 'admin')
      );
    }

    // Check if user is the Super Admin (Hardcoded protection)
    function isSuperAdmin() {
      return isAuthenticated() && request.auth.token.email == 'gonzalodiazs@gmail.com';
    }

    // --- RULES ---

    // 1. Anatomy Modules (Images)
    // Read: Any logged-in user (Students/Instructors)
    // Write: Admins or Super Admin
    match /anatomy/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isSuperAdmin();
    }

    // 2. Clinical Cases (Images)
    // Read: Any logged-in user
    // Write: Admins or Super Admin
    match /cases/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isSuperAdmin();
    }
    
    // 3. Modules (New Structure if used)
    match /modules/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isSuperAdmin();
    }

    // 4. User Avatars
    // Path: avatars/{uid}/{filename}
    // Read: Authenticated users (to see profile pics)
    // Write: Only the user who owns the folder
    match /avatars/{uid}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == uid;
    }

    // 5. Default Fallback
    // Deny any other access to prevent clutter or misuse
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
